<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ucrop theme-->
    <!--Palette-->
    <color name="ucrop_color_black">#000</color>
    <color name="ucrop_color_blaze_orange">#FF6300</color>
    <color name="ucrop_color_ebony_clay">#20242F</color>
    <color name="ucrop_color_heather">#B3BECE</color>
    <color name="ucrop_color_white">#FFF</color>

    <!--uCrop Activity-->
    <color name="ucrop_color_toolbar" tools:override="true">@color/ucrop_color_white</color>
    <color name="ucrop_color_statusbar" tools:override="true">#f5f5f5</color>
    <color name="ucrop_color_toolbar_widget" tools:override="true">@color/ucrop_color_black</color>
    <color name="ucrop_color_widget" tools:override="true">@color/ucrop_color_black</color>
    <color name="ucrop_color_widget_active" tools:override="true">@color/ucrop_color_white</color>
    <color name="ucrop_color_active_controls_color" tools:override="true">
        @color/ucrop_color_blaze_orange
    </color>
    <color name="ucrop_color_inactive_controls_color" tools:override="true">
        @color/ucrop_color_heather
    </color>
    <color name="ucrop_color_widget_rotate_mid_line" tools:override="true">
        @color/ucrop_color_blaze_orange
    </color>
    <color name="ucrop_color_widget_rotate_angle" tools:override="true">
        @color/ucrop_color_ebony_clay
    </color>
    <color name="ucrop_color_active_aspect_ratio" tools:override="true">
        @color/ucrop_color_blaze_orange
    </color>
    <color name="ucrop_color_inactive_aspect_ratio" tools:override="true">
        @color/ucrop_color_ebony_clay
    </color>
    <color name="ucrop_color_widget_background" tools:override="true">
        @color/ucrop_color_ebony_clay
    </color>
    <color name="ucrop_color_widget_text" tools:override="true">@color/ucrop_color_blaze_orange
    </color>
    <color name="ucrop_color_progress_wheel_line" tools:override="true">
        @color/ucrop_color_ebony_clay
    </color>
    <color name="ucrop_color_crop_background" tools:override="true">@color/ucrop_color_black</color>

    <!--Crop View-->
    <color name="ucrop_color_default_crop_grid" tools:override="true">#80ffffff</color>
    <color name="ucrop_color_default_crop_frame" tools:override="true">#ffffff</color>
    <color name="ucrop_color_default_dimmed" tools:override="true">#8c000000</color>
    <color name="ucrop_color_default_logo" tools:override="true">#4f212121</color>
    <!-- ucrop theme-->

</resources>